@{ 
  Layout = "_Layout";
}

@using VendorTracker.Models;

<h1>Pierre's Vendors</h1>

@if (@Model.Count == 0)
{
    <h3>There are no vendors on the list.</h3>
}

@foreach (Vendor vendor in Model)
{
    <h3><a href='/vendors/@vendor.Id'>@vendor.Name: @vendor.Description</a></h3>
}

<p><a href='/'>Return to main page</a></p>